<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>log viewer</display-name>
  <filter>
    <filter-name>CharacterEncoding</filter-name>
    <filter-class>org.jflame.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter><!-- /webserver/logs/synclog -->
  <filter-mapping>
    <filter-name>CharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>logFileView</servlet-name>
    <servlet-class>org.jflame.logviewer.action.ShowLogFileServlet</servlet-class>
    <init-param>
      <param-name>logPath</param-name>
      <param-value>D:/datacenter/logs</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>logFileView</servlet-name>
    <url-pattern>/logFileView</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logoutServlet</servlet-name>
    <servlet-class>org.jflame.web.servlet.LogoutServlet</servlet-class>
    <init-param>
      <param-name>logoutPage</param-name>
      <param-value>/login.jsp</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>logoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>